<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.com.kazetavi.sonofy">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".ui.user.ProfilActivity" />
        <activity android:name=".ui.homepage.HomeActivity" />
        <activity android:name=".ui.addgroup.AddGroupActivity" />
        <activity android:name=".ui.listgroup.ListGroupActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.search.SearchActivityPublication" />
        <activity android:name=".ui.publication.PublicationActivity" />
        <activity android:name=".ui.addpublication.AddPublicationActivity" />
        <activity android:name=".ui.main.MainActivity">
        </activity>

    </application>

</manifest>